<!-- Preloader -->
<% 
	if(theme.preloader.enable) { 
		const animation = theme.preloader.animation;
%>
	<div id="preloader">
		<div class="pre-container">
			<% if( animation == 'spinner' ) { %>
				<div class="spinner">
					<div class="double-bounce1"></div>
					<div class="double-bounce2"></div>
				</div>
			<% } else if( animation == 'transition' ){ %>
				<div class="transition">
					<div class="three-bounce1"></div>
					<div class="three-bounce2"></div>
					<div class="three-bounce3"></div>
				</div>
			<% } else { %>
				<div class="cyclic">
					<div><span></span></div>
					<div><span></span></div>
					<div><span></span></div>
					<div><span></span></div>
				</div>
			<%}%>			
		</div>
	</div>
<% 
	} 
%>

<!-- header -->
<header class="fixbackground bg-pan-br">
	<div class="mask">
		<!-- motto -->
		<div class="h-body">	
			<% if(theme.motto.enable) { %>
				<div class="motto text-shadow-pop-left">
					<p class="content" id="motto-content"><%= __('wait_cn') %></p>
					<p>-<p>
					<p class="author" id="motto-author"><%= __('wait_en') %></p>
				</div>
			<% } %>
		</div>
		
		<!-- others: such as time... -->			
		<div class="h-footer">
			<a href="javascript:;" id="read-more" class="scroll-down">
				<span class="icon-anchor1 animation-scroll-down"></span>
			</a>
		</div>
	</div>
</header>

<div id="navigation-hide">
	<!-- Progress bar -->
	<div id="progress-bar"></div>

	<!-- Progress percent -->
	<div id="progress-percentage"><span>0.0%</span></div>

	<div class="toc-switch"><span class="switch-button"><%= __('toc_switch') %></span></div>

	<!-- Page title -->
	<p>
		<% if( is_home() ) { %>
			<%= __('home') %>
		<% } else if ( is_archive() ) { %>
			<%= __('archive_a') %>
		<% } else if( is_current('categories/index.html') ) { %>
			<%= __('categories') %>
		<% } else if( is_current('tags/index.html') ) { %>
			<%= __('tags') %>
		<% } else if( is_post() ) { %>
			「<%= page.title %>」
		<% } else { %>
			<%= page.title %>
		<% } %>
	</p>

	<% 
		const leanC = theme.leancloud_count; 
	%>
	<% if( is_post() && leanC.enable && leanC.like_post.enable ){ %>
		<span id="star-button" rel="unlike">
			<i class="icon-heart"></i>
		</span>
	<% } %>

	<!-- Nav trigger for navigation-H-->
	<a class="nav-trigger"><span></span></a>
</div>

<!-- Navigation in div(id="navigation-H") -->
<nav class="nav-container" id="cd-nav">
	<div class="nav-header">
		<span class="logo"> 
			<%- image_tag( theme.logo) %>
		</span>
		<a href="javascript:;" class="nav-close"></a>
	</div>
	
	<div class="nav-body">
		<%- partial('nav') %>
	</div>
	
	<div class="nav-footer">
		<%- partial('footer-social') %>
	</div>
</nav>