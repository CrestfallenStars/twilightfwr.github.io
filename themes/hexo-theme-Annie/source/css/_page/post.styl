/*--------------------------------------------------*/
// Post - 文章
/*--------------------------------------------------*/ 

.layout-post {
	width: 60%;
	margin: 0em auto;
	padding: 5em 0;
	border: 1px solid transparent;
}

#layout-post {
	font-size: 1rem;
	line-height: 2;
	
	.article-title {
		font-size: 2rem;
		color: #333;
	}
	
	.article-meta {
		color: #999;
		margin: 1em 0 2em;
		a {
			color:inherit;
		}
		&>span {
			padding: 0.4em;
			display: inline-block;
		}
	}
	
	.article-content {
		a {
			color: #4183C4;
			&:hover {
				border-bottom: 1px solid #4183C4;
			}
		}
				
		&>table {
			display: table;
			table-layout: fixed;
			border-collapse: collapse;
			border-spacing: 0;
			min-width: 100%;
			margin-bottom: 1rem;
			thead {
				tr {
					border: 1px solid $table-border-color;
					background: $table-row-odd-bg-color ;
					font-weight: $table-th-font-weight;
				}
			}
			tbody {
				tr {
					border: 1px solid $table-border-color;
					
					&:nth-child(2n) {
						background: $table-row-odd-bg-color ;
					}
				}
			}
			th, td {
				padding: 0.25rem 0.5rem;
				min-width: 60px;
				border: 1px solid $table-border-color;
			}
		}
		img {
			height: auto;
			width: auto;
			margin: auto;
		}
	}
}

/* Tab - 切换*/

.investment-container {
	width: 100%;
	margin: 6em auto 2em;
	
	.investment-header {
		display: flex;
		justify-content: center;
		margin: 0.5em auto 0;
		.investment-title-1 {
			height: auto;
			width: 50%;
			overflow: hidden;
			div {
				width: auto;
				height: auto;
				
				float: left;
				margin-right: 6px;
				margin-left: 1px;
				text-align: center;
				cursor: pointer;
			}
			
			a, a:link, a:visited, a:hover {
				color: #555;
				width: 131px;
				height: auto;
				display: inline-block;
			}
			
			div.on {
				color: #f70;
				
				a, a:link, a:visited, a:hover {
					color: #f70;
				}
			}
		}
		.investment-title-2 {
			height: auto;
			width: 50%;
			overflow: hidden;
			&>span {
				width: auto;
				height: auto;
				float: right;
				margin-right: 1px;
				margin-left: 6px;
				text-align: center;
				cursor: pointer;
				a {
					margin: 0 4px;
				}
			}
		}
		
	}
	
	.investment-content {
		clear: both;
		border-top: 1px solid #ededed;
		padding: 0;
		min-height: 500px;
		.investment-content-list {
			display: none;
			-webkit-animation: zoom 0.8s;
			animation: zoom 0.8s;
		}
	}
}

@-webkit-keyframes zoom {
	from {
		-webkit-transform: scale(0)
	}
	to {
		-webkit-transform: scale(1)
	}
}

@keyframes zoom {
	from {
		transform: scale(0)
	}
	to {
		transform: scale(1)
	}
}

/* Related post - 相关文章*/

.relate-post {
	/*line-height: 2;*/
	font-size: 1rem;
	
	ul {
		width: 100%;
		margin: 0 auto;
		padding: 2px;
		
		&:first-child {
			margin-top: 4px;
		}
		
		li {
			display: inline-table;
			width: 100%;
			margin-bottom: 2px;
			padding: 0.5em 0;
			border-bottom: 1px solid #e8e8e8;
			clear: both;
			
			.relate-post-text {
				display: inline-block;
				width: 70%;
				vertical-align: top;
				clear: right;
				p {
					margin-bottom: 0;
				}
				.relate-post-title {
					font-size: 1.3rem;
				}
				.relate-post-date {
					font-size: 0.8rem;
				}
				.relate-post-content {
					font-size: 1rem;
				}
			}
			
			.relate-post-cover {
				display: inline-block;
				width: 27%;
				vertical-align: top;
				float: right;
				overflow: hidden;
				img {
					margin-bottom: 0;
					position: relative;
				}
			}
		}
	}
}

/* like - 点赞 */
#star-button {
	position: fixed;
	top: 0px;
	right: 60px;
	font-size: 1.2rem;
	cursor: pointer;
	
	&:hover, &:focus{
		color: red;
	}
}

.star-animation {
	color: red;
}

.config-info {
	margin-top: 1rem;
}