/*--------------------------------------------------*/
// Comment - 评论样式匹配主题
/*--------------------------------------------------*/ 

.layout-comment {
	line-height: inherit;
	margin-top: 0em;
	a {
		border-bottom: none;
	}
}

/* gitalk details */
.gt-container {
	.gt-header-comment {
		-webkit-box-flex: 1;
		-ms-flex: 1;
		flex: 1;
		margin-left: 0;
	}
	.gt-header-textarea {
		min-height: 8.125em;
		max-height: 15em;
	}
	.gt-avatar-github {
		display: none;
	}
	.gt-avatar.gt-header-avatar {
		display: none;
	}
	.gt-no-init {
		padding: 1.25em 0;
		text-align: center;
		&>p {
			text-align: center;
		}
	}
	.gt-meta {
	  margin: 0 0;
	  padding: 1em 0;
	  position: relative;
	  border-bottom: 0px solid #e9e9e9;
	  font-size: 1em;
	}
	.gt-popup {
		top: 2.8em;
		
		.gt-action.is--active:before {
			content: '';
			width: 0.25em;
			height: 0.25em;
			background: #6190e8;
			position: absolute;
			left: 0.5em;
			top: 1.2375em;
		}
	}

}