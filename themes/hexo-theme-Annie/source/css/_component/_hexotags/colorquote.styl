.caption {
	display: block;
	position: relative;
	font-size: 0.9rem;
	text-align: center;
}

.text-highlight {
    display: inline;
     padding: 2px 4px;
    &.info {
        background-color: #def0fd;
    }
    &.success {
        background-color: #cbf6da;
    }
    &.warning {
        background-color: #fff6d1;
    }
    &.danger {
        background-color: #ffb3c2;
    }
}