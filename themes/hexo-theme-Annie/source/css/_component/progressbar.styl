/*--------------------------------------------------*/
// Progressbar - 进度条 
/*--------------------------------------------------*/ 

#navigation-hide {
	display: none;
	position: fixed;
	top: -50px;
	left: 0;
	right: 0;
	width: 100%;
	height: 50px;
	background-color: #fff;
	border-bottom: 1px solid #f5f5f5;
	-webkit-transition: top .25s ease .5s;
	transition: top .25s ease .5s;
	z-index: $zindex-2;
	line-height: 50px;
	p {
		text-align: center;
		display: none;
	}
}

#progress-percentage {
	position: fixed;
	top: 0;
	left: 10px;
	span {
		font-family: $font-family-meta;
	}
}

#progress-bar {
	display: none;
	position: fixed;
	top: 0;
	left: 0;
	z-index: $zindex-1;
	width: 0;
	height: 2px;
	background: #000;
}

.toc-switch {
	position: fixed;
	top: 0;
	left: 60px;
	span {
		cursor: pointer;
	}
}

.toc-switch-button-active {
	color: #f70;
}

.show {
	display: block;
}

.hide {
	display: none;
}

@media screen and (max-width: 1024px) {
	.toc-switch {
		display: none;
	}
}